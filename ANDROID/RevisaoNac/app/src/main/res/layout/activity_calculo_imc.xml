<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculo_imc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.fiap.revisaonac.CalculoImc">

    <TextView
        android:text="Altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/txtAltura"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="148dp"
        android:layout_marginEnd="148dp"
        android:hint="0" />

    <TextView
        android:text="Peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAltura"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/txtAltura"
        android:layout_alignEnd="@+id/txtAltura"
        android:layout_marginTop="38dp"
        android:id="@+id/txtPeso"
        android:hint="0" />

    <TextView
        android:text="Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPeso"
        android:layout_alignRight="@+id/txtPeso"
        android:layout_alignEnd="@+id/txtPeso"
        android:layout_marginTop="71dp"
        android:id="@+id/txtResultado" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtResultado"
        android:layout_alignRight="@+id/txtResultado"
        android:layout_alignEnd="@+id/txtResultado"
        android:layout_marginTop="48dp"
        android:id="@+id/btnCalcular"
        android:onClick="calcularIMC" />

</RelativeLayout>
